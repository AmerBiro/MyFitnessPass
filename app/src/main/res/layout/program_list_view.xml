<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/border_shadow"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/program_image" />

        <TextView
            android:id="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fat Burning" />
        <TextView
            android:id="@+id/coach_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/underline" />

        <TextView
            android:id="@+id/program_des"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textAppearance= "@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/des" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_days"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3 days" />

            <TextView
                android:id="@+id/program_exercises"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="23 exercises" />

            <TextView
                android:id="@+id/program_date"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="02/09/2021 - 02/12/2021" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:layout_weight="1"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/favorite_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_favorite" />

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="28dp"
                    android:layout_margin="5dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_edit" />

                <Button
                    android:id="@+id/share_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_shared" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/delete_buttons"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_delete" />
            </LinearLayout>



            </LinearLayout>

    </LinearLayout>


</LinearLayout>