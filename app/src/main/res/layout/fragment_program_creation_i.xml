<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/linear_layout_main_page"
    android:orientation="vertical"
    tools:context="myfitnesspass.basic.home.programs.program_creation.ProgramCreationI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/page_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a Program" />

        <Button
            android:id="@+id/button_next_arrow"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/div_id"
        style="@style/DividerI"
        android:layout_below="@+id/linear_id" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_below="@+id/linear_id" />
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />

        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
        <TextView
            style="@style/page_counterII"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Program Name " />


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="0dp"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:hint="Fat Burning"
                android:background="@android:color/transparent"
                android:inputType="textPersonName" />




    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        style="@style/DividerI"
        android:layout_below="@+id/linear_id" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">
        <TextView
            style="@style/page_counterII"
            android:paddingTop="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Select Period " />

        <Button
            android:id="@+id/select_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Select Period"
            android:gravity="left"
            android:paddingStart="10dp"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        style="@style/DividerI"
        android:layout_below="@+id/linear_id" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_one"
                android:text="Rang"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_two"
                android:text="one date"
                />


        </RadioGroup>

    </RelativeLayout>


</LinearLayout>