<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/linear_layout_main_page"
    android:orientation="vertical"
    tools:context="myfitnesspass.ui.home.programs.fragments.ProgramCreationI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/page_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a Program" />

        <Button
            android:id="@+id/button_next_arrow"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/div_id"
        style="@style/DividerI"
        android:layout_below="@+id/linear_id" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_below="@+id/linear_id" />
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />

        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />

        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/page_counterII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your program called? " />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:hint="Program Name"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

