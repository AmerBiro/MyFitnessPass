<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/linear_layout_main_page"
    android:orientation="vertical"
    tools:context="myfitnesspass.ui.home.programs.fragments.ProgramCreationI">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/page_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a Program" />

        <Button
            android:id="@+id/button_next_arrow"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/div_id"
        style="@style/DividerI"
        android:layout_below="@+id/linear_id" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:background="@color/black"
            android:layout_below="@+id/linear_id" />
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />

        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />

        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />
        <View
            style="@style/DividerIII"
            android:layout_weight="1"
            android:layout_below="@+id/linear_id" />
    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/page_counterII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your program called? " />


    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@null"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        style="@style/page_counterII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Describe your program " />




    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/edit_text_background"

        app:endIconMode="clear_text">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:lines="5"
            android:gravity="start"
            android:maxLines="10"
            android:background="@null"
            android:padding="10dp"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>