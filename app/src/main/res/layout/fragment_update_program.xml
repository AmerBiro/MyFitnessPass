    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow_iii"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_date_program"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_date" />

        <Button
            android:id="@+id/button_coach_program"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_your_coach" />

        <Button
            android:id="@+id/button_fitness_program"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ic_yourfitness" />
    </LinearLayout>

</LinearLayout>