<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="myfitnesspass.ui.home.programs.fragments.UpdateProgramFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/viewtext"
            style="@style/page_counterII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_toRightOf="@+id/back_btn"
            android:text="Update Program" />


    </RelativeLayout>

    <View
        android:id="@+id/div_id"
        style="@style/DividerII" />


    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_height="180dp"
            app:cardCornerRadius="6dp">
            <ImageView
                android:id="@+id/program_image_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/program_image" />
<!--            <View-->
<!--                android:id="@+id/dd"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_gravity="bottom"-->
<!--                android:background="@drawable/shadow" />-->
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignBottom="@+id/card"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_camera" />

    </RelativeLayout>




    <LinearLayout
        android:id="@+id/linear_edit_program_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_marginTop="4dp">
        <Button
            android:layout_margin="5dp"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/ic_edit_name_program" />
        <TextView
            android:id="@+id/text_view_name"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Program name"
            style="@style/page_counterIIII"
            />
        <Button
           android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_edit"
            />
        </LinearLayout>
    <View
        android:layout_marginStart="30dp"
        style="@style/DividerII" />


    <LinearLayout
        android:id="@+id/linear_edit_program_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal"
        android:layout_weight="0"
        android:layout_marginTop="10dp">
        <Button
            android:layout_margin="5dp"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:background="@drawable/ic_description_program" />
        <TextView
            android:id="@+id/text_view_dec"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/des"
            style="@style/page_counterIIII"
            />
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_edit"
            />
    </LinearLayout>
    <View
        android:layout_marginStart="30dp"
        style="@style/DividerII" />

