<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="myfitnesspass.ui.home.menu.fragments.MenuView">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@drawable/border_shadow_iii"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_back_arrow"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="@drawable/ic_personal_info" />

        <Button
            android:id="@+id/body_info"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="@drawable/ic_body_info" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_shadow_iii"
        android:orientation="vertical">

        <Button
            android:id="@+id/profile_photo"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_profile_photo" />

        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_settings" />

        <Button
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_account" />

        <Button
            android:id="@+id/log_out"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_logout" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/border_shadow_iii"
        android:orientation="vertical">

        <Button
            android:id="@+id/about_us"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_about_us" />

        <Button
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:background="@drawable/ic_help" />
    </LinearLayout>


</LinearLayout>