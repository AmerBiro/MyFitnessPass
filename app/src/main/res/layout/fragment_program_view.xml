<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myfitnesspass.basic.home.programs.ProgramView">
    <LinearLayout
        android:id="@+id/linear_id"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:textSize="21dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="My Fitness Pass" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight="1">



            <Button
                android:id="@+id/favorite_id"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_shared" />

            <Button
                android:id="@+id/share_id"
                android:layout_width="28dp"
                android:layout_margin="5dp"
                android:layout_height="28dp"
                android:background="@drawable/ic_favorite" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_add" />


        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/div_id"
        style="@style/Divider2"
        android:layout_below="@+id/linear_id" />

    <SearchView
        android:queryHint="Enter Program name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:background="@drawable/search_view_background"
        android:layout_below="@+id/div_id"
        android:layout_margin="16dp" />
</RelativeLayout>