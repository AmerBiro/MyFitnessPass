<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="myfitnesspass.ui.home.programs.fragments.ProgramView">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/program_image" />

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/intensity"
                    android:layout_width="0dp"
                    style="@style/page_subtitleII"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Intensity" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/exercises"
                    android:layout_width="0dp"
                    style="@style/page_subtitleII"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Exercises" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/days"
                    android:layout_width="0dp"
                    style="@style/page_subtitleII"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Days" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/intensity_text"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="MEDIUM" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/exercises_text"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="27" />

                <TextView
                    android:gravity="center_horizontal"
                    android:id="@+id/days_text"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_name_1"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="Chest and ABS" />

                <TextView
                    android:id="@+id/day_1"
                    android:layout_width="0dp"
                    android:gravity="right"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Day 1" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_navigate"
                     />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                style="@style/DividerII"
                android:layout_below="@+id/linear_id" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_name_2"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="BACK And BICEPS" />

                <TextView
                    android:id="@+id/day_2"
                    android:layout_width="0dp"
                    android:gravity="right"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Day 1" />

                <Button
                    android:id="@+id/next2"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_navigate"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                style="@style/DividerII"
                android:layout_below="@+id/linear_id" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_name_3"
                    android:layout_width="0dp"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text=" LEGS And ABS" />

                <TextView
                    android:id="@+id/day_3"
                    android:layout_width="0dp"
                    android:gravity="right"
                    style="@style/page_subtitle"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Day 1" />

                <Button
                    android:id="@+id/next3"
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_navigate"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:id="@+id/div_id"
                style="@style/DividerII"
                android:layout_below="@+id/linear_id" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>