<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">
    <fragment
        android:id="@+id/registrationSplashScreen"
        android:name="my.fitness.myfitness.ui.registration.RegistrationSplashScreen"
        android:label="registration_splash_screen"
        tools:layout="@layout/splash_screen" >
        <action
            android:id="@+id/action_registrationSplashScreen_to_registration"
            app:destination="@id/registration"
            app:popUpToInclusive="true"
            app:popUpTo="@id/registrationSplashScreen"
            />
        <action
            android:id="@+id/action_registrationSplashScreen_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/registration"
        android:name="my.fitness.myfitness.ui.registration.Registration"
        android:label="registration_registration"
        tools:layout="@layout/auth_login" >
        <action
            android:id="@+id/action_registration_to_personal"
            app:destination="@id/personal"
            />
        <action
            android:id="@+id/action_registration_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/personal"
        android:name="my.fitness.myfitness.ui.registration.SignUp"
        android:label="registration_personal"
        tools:layout="@layout/auth_sign_up" >
        <action
            android:id="@+id/action_personal_to_registration"
            app:destination="@id/registration" />
        <action
            android:id="@+id/action_personal_to_home"
            app:destination="@id/home" />
    </fragment>
    <fragment
        android:id="@+id/personal2"
        android:name="my.fitness.myfitness.ui.registration.Personal2"
        android:label="registration_personal2"
        tools:layout="@layout/registration_personal2" />
    <fragment
        android:id="@+id/body"
        android:name="my.fitness.myfitness.ui.registration.Body"
        android:label="registration_body"
        tools:layout="@layout/profile_body" />
    <fragment
        android:id="@+id/membership"
        android:name="my.fitness.myfitness.ui.registration.Membership"
        android:label="registration_membership"
        tools:layout="@layout/profile_membership" />
    <fragment
        android:id="@+id/caoch"
        android:name="my.fitness.myfitness.ui.registration.Caoch"
        android:label="registration_caoch"
        tools:layout="@layout/coach" />
    <fragment
        android:id="@+id/profilePhoto"
        android:name="my.fitness.myfitness.ui.registration.ProfilePhoto"
        android:label="registration_profile_photo"
        tools:layout="@layout/profile_photo" />
    <fragment
        android:id="@+id/home"
        android:name="my.fitness.myfitness.ui.home.Home"
        android:label="main_app_home"
        tools:layout="@layout/home" />
</navigation>