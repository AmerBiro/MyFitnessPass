<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFitness" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">#131313</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">#3F51B5</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Change status bar text color with WHITE/BLACK -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- MaterialDatePicker -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    </style>

    <style name="page_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="page_subtitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="page_subtitleII">
        <item name="android:textColor">#1294F2</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="linear_layout_main_page">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="page_counter">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="page_counterII">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
    </style>


    <style name="page_counterIII">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="page_description">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="slider">
        <item name="thumbColor">@color/blue</item>
        <item name="trackColorActive">@color/blue</item>
        <item name="trackColorInactive">#C8C1C1</item>
        <item name="haloColor">#FFFFFF</item>
    </style>



    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>

    </style>

    <style name="DividerI">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#32B1ADAD</item>
    </style>


    <style name="DividerII">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#32B1ADAD</item>
    </style>


    <style name="DividerIII">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>



</resources>